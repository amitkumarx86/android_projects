<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:focusable="false"
    android:background="#05ffffff"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/videoThumbnail"
        android:layout_margin="6dp"
        android:background="#150a0909"
        android:contentDescription="@string/imagepath"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/videoTitle"
        android:layout_marginLeft="15dp"
        android:textStyle="normal"
        android:textColor="#d3070403"
        android:textSize="20sp"
        android:focusable="false"
        android:layout_alignTop="@+id/videoThumbnail"
        android:layout_toEndOf="@+id/videoThumbnail" />


</RelativeLayout>